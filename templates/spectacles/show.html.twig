{% extends 'base.html.twig' %}

{% block title %}Spectacles{% endblock %}

{% block body %}
    <h1>Spectacles</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ spectacle.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ spectacle.Nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ spectacle.Description }}</td>
            </tr>
            <tr>
                <th>Dates</th>
                <td>{{ spectacle.Dates ? spectacle.Dates|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ spectacle.Image }}</td>
            </tr>
            <tr>
                <th>Places</th>
                <td>{{ spectacle.Places }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ spectacle.Prix }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('spectacles_index') }}">back to list</a>

    <a href="{{ path('spectacles_edit', {'id': spectacle.id}) }}">edit</a>

    {{ include('spectacles/_delete_form.html.twig') }}
{% endblock %}
